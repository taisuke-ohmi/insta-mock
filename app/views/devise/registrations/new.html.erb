<div class="main">
  <div class="container">
    <div class="col-md-4 col-md-offset-4 mx-auto">
      <div class="form-wrap">
        <div class="form-group text-center">
          <h2 class="logo-img mx-auto"></h2>
          <h2 class="wv-heading--title">
            Check out — it’s free!
          </h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control my-input" %>
          </div>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control my-input" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control my-input" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control my-input" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-block send-button tx-tfm" %>
          </div>
        <% end %>
        <div class="col-md-12 ">
           <div class="login-or">
              <hr class="hr-or">
              <span class="span-or">or</span>
           </div>
        </div>
        <div class="form-group">
          <%= link_to "ログインする", new_user_session_path, class: "btn btn-block g-button" %>
        </div>
      </div>
    </div>
  </div>
</div>
